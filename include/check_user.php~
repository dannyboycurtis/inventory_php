<?php
include_once 'common.php';

$mysqli = login_db_connect();

sec_session_start();

$logged = login_check( $mysqli );

if ( !( $logged ) )
	header( 'Location: ../login.php' );

$mysqli = inventory_db_connect();

if ( !isset( $_POST['fname'], $_POST['lname'] ) )
	header( 'Location: ../portal.php' );

$query_stmt = "SELECT f_name, l_name FROM user WHERE f_name = ?, l_name = ? LIMIT 1";

if ( $stmt = $mysqli->prepare( $query_stmt ) )
{
	$stmt->bind_param( 'ss', $_POST['fname'], $_POST['lname'] );
	$stmt->execute();
	$stmt->store_result();

	if ( $stmt->num_rows == 1 )
		echo "1";

	else
		echo "0";
}

else
	echo "fail";
